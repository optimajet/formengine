{
  "name": "@react-form-builder/bundle-size",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Bundle size comparison",
  "workspaces": [
    "formengine",
    "rjsf",
    "survey",
    "vueform",
    "shared"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "report": "node scripts/analyze-bundle-sizes.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "npx @biomejs/biome format --write .",
    "check:tsc": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@rspack/cli": "^1.6.8",
    "ajv": "8.17.1",
    "react": "^19.0.1",
    "react-dom": "^19.0.1",
    "rollup-plugin-bundle-stats": "^4.21.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.0.14",
    "@types/react-dom": "^19.0.6",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "serve": "^14.2.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vite-bundle-analyzer": "^1.3.1",
    "vite-plugin-bundlesize": "^0.3.0",
    "vite-plugin-svgr": "^4.5.0"
  },
  "overrides": {
    "@eslint/eslintrc": {
      "ajv": "6.12.6"
    }
  }
}
