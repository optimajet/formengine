root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 140
tab_width = 2

[notes-*.md]
max_line_length = off

[package.json]
indent_style = space
indent_size = 2
insert_final_newline = true

[package-lock.json]
end_of_line = unset
indent_size = unset
indent_style = unset
insert_final_newline = unset
max_line_length = unset
tab_width = unset

[*.{ts,tsx}]
ij_typescript_force_quote_style = true
ij_typescript_use_double_quotes = false

ij_typescript_force_semicolon_style = true
ij_typescript_use_semicolon_after_statement = false

ij_typescript_import_sort_module_name = true
ij_typescript_import_sort_members = true
ij_typescript_spaces_within_imports = false

ij_typescript_do_while_brace_force = if_multiline
ij_typescript_for_brace_force = if_multiline
ij_typescript_if_brace_force = if_multiline
ij_typescript_while_brace_force = if_multiline
